{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "*.html",
            "use": "@vercel/static"
        },
        {
            "src": "css/**",
            "use": "@vercel/static"
        },
        {
            "src": "js/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/js/config.js",
            "dest": "server.js",
            "headers": {
                "cache-control": "no-cache, no-store, must-revalidate"
            }
        },
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/js/(.*)",
            "dest": "/js/$1",
            "headers": {
                "cache-control": "no-cache, no-store, must-revalidate"
            }
        },
        {
            "src": "/css/(.*)",
            "dest": "/css/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache, no-store, must-revalidate"
                }
            ]
        }
    ]
} 